{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Pedido</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Fechacreacion</th>
                <td>{{ entity.fechaCreacion|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Usuario</th>
                <td>{{ entity.usuario }}</td>
            </tr>
            <tr>
                <th>Fechaentrega</th>
                <td>{{ entity.fechaEntrega|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <div class="form-actions">
        <a href="{{ path('pedido') }}" class="btn btn-mini">
            Cancelar        </a>
        <a href="{{ path('pedido_edit', { 'id': entity.id }) }}" class="btn btn-primary btn-mini">
            Editar
        </a>
{{ form(delete_form) }}
{% endblock %}
