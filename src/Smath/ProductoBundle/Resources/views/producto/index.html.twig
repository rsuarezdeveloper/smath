{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Listado de Productos</h1>

    <table class="table table-bordered table condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Referencia</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Estado</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('producto_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.Referencia }}</td>
                <td>{{ entity.Nombre }}</td>
                <td>{{ entity.Descripcion }}</td>
                <td>{{ entity.Estado }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('producto_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('producto_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('producto_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
