{% extends '::base.html.twig' %}

{% block body -%}
    <h1>producto list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Proreferencia</th>
                <th>Linea</th>
                <th>Pronombre</th>
                <th>Prodescripcion</th>
                <th>Proactivo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('producto_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.proReferencia }}</td>
                <td>{{ entity.linea.linDescripcion}}</td>
                <td>{{ entity.proNombre }}</td>
                <td>{{ entity.proDescripcion }}</td>
                <td>{{ entity.proActivo }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('producto_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('producto_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('producto_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
