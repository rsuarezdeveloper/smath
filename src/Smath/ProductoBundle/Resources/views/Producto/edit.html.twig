{% extends '::base.html.twig' %}
{% block stylesheets%}
<style>
    table tr th{width:100px;}
</style>
{%endblock%}
{% block body -%}
    <!-- row -->
    <div class="row">

        <!-- col -->
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark"><!-- PAGE HEADER --><i class="fa-fw fa fa-edit"></i> Editar Productos <span>>
                SmathSales </span></h1>
        </div>
        <!-- end col -->
        <!-- right side of the page with the sparkline graphs -->
    </div>
    <!-- end row -->
    {{ form_start(edit_form,{'attr':{'class':'form-inline'}}) }}
        <table class="table table-condensed">
            <tr>
                <th>Referencia</th>
                <td>{{form_widget(edit_form.Referencia)}}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{form_widget(edit_form.Nombre,{'attr':{'class':'form-control'}})}}</td>
            </tr>
            <tr>
                <th>Descripci&oacute;n</th>
                <td>{{form_widget(edit_form.Descripcion,{'attr':{'class':'form-control'}})}}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{{form_widget(edit_form.Estado)}}</td>
            </tr>
            <tr>
                <th>L&iacute;nea</th>
                <td>{{form_widget(edit_form.Linea)}}</td>
            </tr>
        </table>
        <div style="display:none">{{form_rest(edit_form)}}</div>
        <a href="{{ path('producto') }}" class="btn btn-info">
           Cancelar
        </a> 
        <button type="submit" class="btn btn-primary"> <i class="fa fa-save"></i> Guardar</button>

        {% if is_granted('ROLE_ADMIN') %}
        <br /><br />
        {{ form(delete_form) }}
        {% endif %}
    {{ form_end(edit_form) }}
{% endblock %}
