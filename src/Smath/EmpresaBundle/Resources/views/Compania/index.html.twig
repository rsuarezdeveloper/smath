{% extends '::base.html.twig' %}

{% block body -%}
    <div class="page-header">
    	<h1>Compania</h1>     <a href="{{ path('compania_new') }}" class="btn btn-primary btn-mini"> <i class="icon-plus icon-white"></i>
                Crear Nuevo
            </a>
        </div>
    <table class="data-tbl-simple table table-bordered table-condensed table-striped table-hover">
        <thead>
            <tr>                

            	<th>Id</th>                

            	<th>Codigo</th>                

            	<th>Nombre</th>                

            	<th>Telefono</th>                

            	<th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('compania_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.codigo }}</td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.telefono }}</td>
                <td>{{ entity.estado }}</td>
                <td style="text-align:center"><a href="{{ path('compania_show', { 'id': entity.id }) }}" > <i class="icon-zoom-in"></i> </a><a href="{{ path('compania_edit', { 'id': entity.id }) }}" ><i class="icon-edit"></i> </a>                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
{% block javascripts -%}

{% endblock %}
