{% extends '::base.html.twig' %}
{% block stylesheets%}
<style>
    table tr th{width:100px;}
</style>
{%endblock%}
{% block body -%}
    <!-- row -->
    <div class="row">

        <!-- col -->
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark"><!-- PAGE HEADER --><i class="fa-fw fa fa-edit"></i> Editar Compa&tilede;ia</h1>
        </div>
        <!-- end col -->
        <!-- right side of the page with the sparkline graphs -->
    </div>
    <!-- end row -->
    {{ form_start(edit_form,{'attr':{'class':'form-inline'}}) }}
        <table class="table table-condensed">
            <tr>
                <th>Codigo</th>
                <td>{{form_widget(edit_form.codigo)}}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{form_widget(edit_form.nombre,{'attr':{'class':'form-control'}})}}</td>
            </tr>
            <tr>
                <th>Tel&eacute;fono</th>
                <td>{{form_widget(edit_form.telefono,{'attr':{'class':'form-control'}})}}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{{form_widget(edit_form.estado)}}</td>
            </tr>
            <tr>
                <th>Compa√±ia</th>
                <td>{{form_widget(edit_form.companiaId)}}</td>
            </tr>
            <tr>
                <th>Geo Ubicaci&oacute;n</th>
                <td>{{form_widget(edit_form.geoUbicacion)}}</td>
            </tr>
        </table>
        <div style="display:none">{{form_rest(edit_form)}}</div>
        <a href="{{ path('compania') }}" class="btn btn-info">
           Cancelar
        </a> <button type="submit" class="btn btn-primary"> <i class="fa fa-save"></i> Guardar</button>
     {{ form_end(edit_form) }}
    {% if is_granted('ROLE_ADMIN')%}
    {{ form(delete_form) }}
   {% endif %}
{% endblock %}
