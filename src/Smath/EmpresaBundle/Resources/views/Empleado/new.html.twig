{% extends '::base.html.twig' %}
{% block stylesheets%}
<style>
    table tr th{width:100px;}
</style>
{%endblock%}
{% block body -%}
    <!-- row -->
    <div class="row">

        <!-- col -->
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark"><!-- PAGE HEADER --><i class="fa-fw fa fa-edit"></i> Crear Empleado <span>>
                SmathSales </span></h1>
        </div>
        <!-- end col -->
        <!-- right side of the page with the sparkline graphs -->
    </div>
    <!-- end row -->
    {{ form_start(form,{'attr':{'class':'form-inline'}}) }}
        <table class="table table-condensed">
            <tr>
                <th>Codigo</th>
                <td>{{form_widget(form.codigo)}}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{form_widget(form.nombre,{'attr':{'class':'form-control'}})}}</td>
            </tr>
            <tr>
                <th>Tel&eacute;fono</th>
                <td>{{form_widget(form.telefono,{'attr':{'class':'form-control'}})}}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{{form_widget(form.estado)}}</td>
            </tr>
            <tr>
                <th>Departamento</th>
                <td>{{form_widget(form.departamento)}}</td>
            </tr>
            <tr>
                <th>Tipo Empleado</th>
                <td>{{form_widget(form.tipoEmpleado)}}</td>
            </tr>
            <tr>
                <th>Geo Ubicacion</th>
                <td>{{form_widget(form.geoUbicacion)}}</td>
            </tr>
        </table>
        <div style="display:none">{{form_rest(form)}}</div>
        <a href="{{ path('empleado') }}" class="btn btn-info">
           Cancelar
        </a> <button type="submit" class="btn btn-primary"> <i class="fa fa-save"></i> Guardar</button>
     {{ form_end(form) }}
{% endblock %}
